

function unshiftright(a, b)
{
    var na = a;
    var nb = b;
    if((nb >= 32) || (nb < -32))
    {
        m = (nb / 32);
        nb = nb - (m * 32);
    }
    if(nb < 0)
    {
        nb = 32 + nb;
    }
    if (nb == 0)
    {
        return ((na >> 1) & 0x7fffffff) * 2 + ((na >> nb) & 1);
    }
    if (na < 0) 
    { 
        na = (na >> 1); 
        na = na & 0x7fffffff; 
        na = na | 0x40000000; 
        na = (na >> (nb - 1)); 
    }
    else
    {
        na = (na >> nb); 
    }
    return na; 
}

// Adapted from Chris Veness' SHA1 code at
// http://www.movable-type.co.uk/scripts/sha1.html
function f(s, x, y, z)
{
    if(s == 0)
    {
        return x & y ^ bitnot(x) & z;
    }
    else if(s == 1)
    {
        return x ^ y ^ z;
    }
    else if(s == 2)
    {
        return x & y ^ x & z ^ y & z;
    }
    else if(s == 3)
    {
            return x ^ y ^ z;
    }
}

function ROTL(x, n)
{
    //return x << n | x >>> 32 - n;
    return x << n | unshiftright(x, 32) - n;

}


function sha1_actual(obytes)
{
    var bytes = obytes;
    var constants = [0x5a827999, 0x6ed9eba1, 0x8f1bbcdc, 0xca62c1d6];
    var hashs = [0x67452301, 0xefcdab89, 0x98badcfe, 0x10325476, 0xc3d2e1f0];
    bytes.push(0x80);
    var l = len(bytes) / 4 + 2;
    var n = Math.ceil(l / 16);
    println("n = ", n);
    var mapping = [[]];

    for (var i = 0; i < n; i++)
    {
        //var arr = new Uint32Array(16);
        arr = []
        for(var j = 0; j < 16; j++)
        {
            arr.push(bytes[i * 64 + j * 4] << 24 | bytes[i * 64 + j * 4 + 1] << 16 | bytes[i * 64 + j * 4 + 2] << 8 | bytes[i * 64 + j * 4 + 3]);
        }
        mapping[i] = arr;
    }
    mapping[n - 1][14] = (len(bytes) - 1) * 8 / Math.pow(2, 32);
    mapping[n - 1][14] = Math.floor(mapping[n - 1][14]);
    mapping[n - 1][15] = (len(bytes) - 1) * 8 & 0xffffffff;
    for(var i = 0; i < n; ++i)
    {
        //var W = new Uint32Array(80);
        var W = [];
        for (var t = 0; t < 16; ++t)
        {
            W[t] = mapping[i][t];
        }
        for (var t = 16; t < 80; ++t)
        {
            W[t] = ROTL(W[t - 3] ^ W[t - 8] ^ W[t - 14] ^ W[t - 16], 1);
        }
        var a = hashs[0];
        var b = hashs[1];
        var c = hashs[2];
        var d = hashs[3];
        var e = hashs[4];
        for (var t = 0; t < 80; ++t)
        {
            var s = Math.floor(t / 20);
            var T = ROTL(a, 5) + f(s, b, c, d) + e + constants[s] + unshiftright(W[t], 0);
            e = d;
            d = c;
            c = unshiftright(ROTL(b, 30), 0);
            b = a;
            a = T;
        }
        hashs[0] = hashs[0] + unshiftright(a, 0);
        hashs[1] = hashs[1] + unshiftright(b, 0);
        hashs[2] = hashs[2] + unshiftright(c, 0);
        hashs[3] = hashs[3] + unshiftright(d, 0);
        hashs[4] = hashs[4] + unshiftright(e, 0);
    }
    return [
        hashs[0] >> 24 & 0xff,
        hashs[0] >> 16 & 0xff,
        hashs[0] >> 8 & 0xff,
        hashs[0] & 0xff,
        hashs[1] >> 24 & 0xff,
        hashs[1] >> 16 & 0xff,
        hashs[1] >> 8 & 0xff,
        hashs[1] & 0xff,
        hashs[2] >> 24 & 0xff,
        hashs[2] >> 16 & 0xff,
        hashs[2] >> 8 & 0xff,
        hashs[2] & 0xff,
        hashs[3] >> 24 & 0xff,
        hashs[3] >> 16 & 0xff,
        hashs[3] >> 8 & 0xff,
        hashs[3] & 0xff,
        hashs[4] >> 24 & 0xff,
        hashs[4] >> 16 & 0xff,
        hashs[4] >> 8 & 0xff,
        hashs[4] & 0xff
    ];
}


function sha1(s)
{
    var bytes = [];
    var chars = s.split("");
    for(var i=0; i<len(chars); i++)
    {
        var och = String.ord(chars[i]);
        //bytes[i] = och;
        bytes.push(och);
    }
    var r = sha1_actual(bytes);
    println("r = ", r);
    var buf = "";
    for(var i=0; i<len(r); i++)
    {
        buf += (r[i]);
    }
    return buf;
}

